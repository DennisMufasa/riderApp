                                    android:padding="3dp"
                                    android:text="ETA"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/estimated_time"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentStart="true"
                                    android:layout_below="@+id/txt_eta"
                                    android:gravity="center"
                                    android:hint="-"
                                    android:padding="5dp"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                            </RelativeLayout>

                            <View
                                android:id="@+id/vertical_line"
                                android:layout_width="0.5sp"
                                android:layout_height="60dp"
                                android:layout_centerVertical="true"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="10dp"
                                android:layout_toStartOf="@+id/max_layout"
                                android:background="@color/darker_gray" />

                            <RelativeLayout
                                android:id="@+id/max_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/txt_maxsize"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:gravity="center"
                                    android:padding="3dp"
                                    android:text="MAX SIZE"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/darker_gray"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                                <TextView
                                    android:id="@+id/number_of_people"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/txt_maxsize"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_marginTop="10dp"
                                    android:gravity="center"
                                    android:hint="6 PEOPLES"
                                    android:padding="5dp"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:textColor="@color/colorPrimary"
                                    android:textSize="12sp"
                                    android:visibility="visible" />

                            </RelativeLayout>


                            <View
                                android:id="@+id/view6"
                                android:layout_width="0.5sp"

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:visibility="visible"
                  android:id="@+id/driver_call_layout"
                  android:layout_alignParentBottom="true"
                  android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:id="@+id/driver_layout"
            android:background="@color/colorPrimary"
            android:padding="10dp"

            >
            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/account_circle"
                android:layout_centerHorizontal="true"
                android:id="@+id/driver_image"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Driver Name"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/driver_name"
                android:layout_alignParentStart="true"
                android:layout_toStartOf="@+id/driver_image" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SUV"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/car_name"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_toEndOf="@+id/driver_image" />


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/colorPrimary"
                        android:id="@+id/call_layout"
            >

            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:gravity="center">

                <RelativeLayout
                    android:id="@+id/rounded_arrow"
                    android:layout_width="wrap_content"
                    android:layout_alignRight="@+id/view2"
                    android:layout_below="@+id/view2"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton2"
                        android:src="@drawable/circle_phone_msg"
                        android:background="@null"

                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButton3"
                        android:src="@drawable/ic_call"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/round_msg"
                    android:layout_width="wrap_content"
                    android:layout_alignRight="@+id/view2"
                    android:layout_below="@+id/view2"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:layout_marginBottom="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButtond"
                        android:src="@drawable/circle_phone_msg"
                        android:background="@null"

                        />

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageButtonmsg"
                        android:src="@drawable/message_rider"
                        android:background="@null"
                        android:layout_centerVertical="true"
                        android:layout_centerHorizontal="true" />
                </RelativeLayout>

            </LinearLayout>


        </RelativeLayout>


    </LinearLayout>



</RelativeLayout>
